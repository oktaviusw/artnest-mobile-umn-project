<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.umn.mobile.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/application_logo"
        android:label="ArtNest"
        android:roundIcon="@drawable/application_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DescribeActivity" />
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/AppTheme.SlidrActivityTheme" />
        <activity
            android:name=".SignInActivity"
            android:theme="@style/AppTheme.SlidrActivityTheme" />
        <activity
            android:name=".ForgetPasswordActivity"
            android:theme="@style/AppTheme.SlidrActivityTheme" />
        <activity
            android:name=".ActivityMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DescribeActivity" />
        <activity
            android:name=".ActivityDisplayArtwork"
            android:label="@string/title_activity_display_artwork"
            android:parentActivityName=".ActivityMain"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityMain" />
        </activity>
        <activity
            android:name=".ActivityArtistPortfolio"
            android:label="@string/title_activity_artist_portofolio"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ActivityAddArtwork"
            android:label="@string/title_activity_add_artwork"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ActivitySetting"
            android:label="@string/title_activity_setting"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ActivitySearchResult"
            android:label="@string/title_activity_search_result"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ActivityCreateCommission"
            android:label="@string/title_activity_create_commission"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ActivitySettingAddCategory"
            android:label="@string/title_activity_setting_add_category"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>